#include <iostream>  //standard i/o header file
using namespace std; 
int main() 
{ 
   char grade; //initilization char
   
   	cout<<"Enter your grade:"<<endl; //shows output to take grade
	cin>>grade; //take input from user
	
	switch (grade)
{ 
// if the user type these letters the code will give output, output depends on the letter use in case condition
        case 'A': case 'a': 
	            cout<<"Your average must be between 90 â€“ 100";
              	    break;
              
	      case 'B': case 'b':
	            cout<<"Your average must be between 80 - 89";
             	    break;
              
	      case 'C': case 'c':
           	 cout<<"Your average must be between 70 - 79";
	         break;
             
	      case 'D': case 'd':
           	 cout<<"Your average must be between 60 - 69";
          	 break;
             
      	default:
	            cout<<"Your average must be below 60"; 
   }
   
	return 0;
  
	 }
